<% @page_title = t("access_tokens.index.title") %>

<% content_for :header do %>
  <div class="header__actions header__actions--start">
    <%= back_link_to t("access_tokens.index.back_link"), user_path(Current.user), "keydown.left@document->hotkey#click keydown.esc@document->hotkey#click" %>
  </div>

  <h1 class="header__title"><%= @page_title %></h1>
<% end %>

<section class="panel panel--wide shadow center webhooks">
  <% if @access_tokens.any? %>
    <p class="margin-none-block-start"><%= t("access_tokens.index.description") %></p>
    <table class="access_tokens_table margin-block-end-double max-width txt-small">
      <thead>
        <tr>
          <th><%= t("access_tokens.index.table.description") %></th>
          <th><%= t("access_tokens.index.table.permission") %></th>
          <th><%= t("access_tokens.index.table.created") %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "my/access_tokens/access_token", collection: @access_tokens %>
      </tbody>
    </table>
  <% else %>
    <p class="margin-none-block-start"><%= t("access_tokens.index.empty_description") %></p>
  <% end %>

  <%= link_to new_my_access_token_path, class: "btn btn--link" do %>
    <%= icon_tag "add" %>
    <span><%= t("access_tokens.index.generate_new") %></span>
  <% end %>
</section>
