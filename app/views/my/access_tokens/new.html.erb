<% @page_title = t("access_tokens.new.title") %>

<% content_for :header do %>
  <div class="header__actions header__actions--start">
    <%= back_link_to t("access_tokens.new.back_link"), my_access_tokens_path, "keydown.left@document->hotkey#click keydown.esc@document->hotkey#click" %>
  </div>

  <h1 class="header__title"><%= @page_title %></h1>
<% end %>

<article class="panel panel--wide shadow center txt-align-start" style="view-transition-name: <%= dom_id(@access_token) %>">
  <%= form_with model: @access_token, url: my_access_tokens_path, scope: :access_token, data: { controller: "form" }, html: { class: "flex flex-column gap" } do |form| %>
    <div class="flex flex-column gap-half">
      <strong><%= form.label :description, t("access_tokens.new.description_label") %></strong>
      <%= form.text_field :description, required: true, autofocus: true, class: "input", placeholder: t("access_tokens.new.description_placeholder"), data: { action: "keydown.esc@document->form#cancel" } %>
    </div>

    <div class="flex flex-column gap-half">
      <strong><%= form.label :permission, t("access_tokens.new.permission_label") %></strong>
      <%= form.select :permission, options_for_select({ t("access_tokens.new.permission_read") => "read", t("access_tokens.new.permission_write") => "write"}), {}, class: "input input--select" %>
    </div>

    <%= form.button type: :submit, class: "btn btn--link center txt-medium" do %>
      <span><%= t("access_tokens.new.submit") %></span>
    <% end %>

     <%= link_to t("access_tokens.new.cancel"), my_access_tokens_path, data: { form_target: "cancel" }, hidden: true %>
  <% end %>
</article>
