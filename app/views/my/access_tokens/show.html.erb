<% @page_title = t("access_tokens.show.title") %>

<% content_for :header do %>
  <div class="header__actions header__actions--start">
    <%= back_link_to t("access_tokens.show.back_link"), my_access_tokens_path, "keydown.left@document->hotkey#click keydown.esc@document->hotkey#click" %>
  </div>

  <h1 class="header__title"><%= @page_title %></h1>
<% end %>

<article class="panel panel--wide shadow center txt-align-start" style="view-transition-name: <%= dom_id(@access_token) %>">
  <div class="flex flex-column gap">
    <label class="flex flex-column gap-half txt-align-start">
      <strong><%= @access_token.description %> (<%= @access_token.permission == "write" ? t("access_tokens.new.permission_write") : t("access_tokens.new.permission_read") %>)</strong>
      <input type="text" value="<%= @access_token.token %>" class="input" readonly>
    </label>
    <p class="margin-none txt-small"><%= t("access_tokens.show.save_warning") %></p>

    <%= tag.button class: "btn btn--link center", data: {
      controller: "copy-to-clipboard", action: "copy-to-clipboard#copy",
          copy_to_clipboard_success_class: "btn--success", copy_to_clipboard_content_value: @access_token.token } do %>
      <%= icon_tag "copy-paste" %>
      <span><%= t("access_tokens.show.copy_token") %></span>
    <% end %>
  </div>
</article>
